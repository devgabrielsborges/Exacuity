<?xml version="1.0" encoding="utf-8"?>
<!-- A modified layout inspired by activity_exibition.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ContrastActivity">

    <!-- Top Bar with two text views (acuity on left; logCS on top right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_logcs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_percentage"
            android:layout_width="wrap_content"
            android:padding="14dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Main Area (Letters) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/text_letras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/optotypejuan"
            android:gravity="center"
            android:letterSpacing="1.8"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="80sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Bottom Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="0dp">
    </LinearLayout>
</LinearLayout>